<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HomeWorkForLessonOne" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="buttonStyls" parent="Theme.HomeWorkForLessonOne">
        <item name="android:textSize">@dimen/numbresSize</item>
        <item name="colorPrimary">#EEDA0F55</item>
        <item name="android:textViewStyle">@style/textViewStyle</item>
        <!--        <item name="android:background">@drawable/fonforcalculator3</item>-->
        <item name="android:background">#D8A91B</item>
    </style>


    <style name="buttonStyls2">
        <item name="android:textSize">@dimen/numbresSize</item>
        <item name="colorPrimary">#E4292825</item>
        <item name="android:textViewStyle">@style/textViewStyle2</item>
        <!--        <item name="android:background">@drawable/darkfon</item>-->
        <item name="android:background">#59444B</item>
    </style>


    <style name="textViewStyle">
        <item name="android:background">@drawable/doska</item>
        <item name="android:textSize">@dimen/displayTextSize</item>
        <item name="android:padding">@dimen/textViewPadding</item>
        <item name="android:textColor">@color/displayTextColor</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="textViewStyle2">
        <item name="android:background">@drawable/doskadark</item>
        <item name="android:textSize">@dimen/displayTextSize</item>
        <item name="android:padding">@dimen/textViewPadding</item>
        <item name="android:textColor">@color/displayTextColor</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>