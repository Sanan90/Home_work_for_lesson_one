<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fonforcalculator3"

    tools:context=".calculatorLayout">

    <TextView
        android:id="@+id/forNumbers"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0"
        android:layout_margin="@dimen/marginTextView"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/button2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginBetween"
        android:layout_marginRight="@dimen/marginBetween"
        android:text="@string/_1"
        android:textSize="@dimen/numbresSize"
        app:layout_constraintBottom_toTopOf="@id/button5"
        app:layout_constraintRight_toLeftOf="@id/button2" />


    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginBetween"
        android:layout_marginRight="@dimen/marginBetween"
        android:text="@string/_2"
        android:textSize="@dimen/numbresSize"
        app:layout_constraintBottom_toTopOf="@id/button5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginBetween"
        android:layout_marginTop="@dimen/dp0"
        android:layout_marginRight="@dimen/marginBetween"
        android:text="@string/_3"
        android:textSize="@dimen/numbresSize"
        app:layout_constraintBottom_toTopOf="@id/button5"
        app:layout_constraintLeft_toRightOf="@id/button2" />


    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginBetween"
        android:layout_marginRight="@dimen/marginBetween"
        android:text="@string/_4"
        android:textSize="@dimen/numbresSize"
        app:layout_constraintRight_toLeftOf="@id/button5"
        app:layout_constraintTop_toBottomOf="@id/button1" />


    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginBetween"
        android:layout_marginRight="@dimen/marginBetween"
        android:text="@string/_5"
        android:textSize="@dimen/numbresSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="120dp"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginBetween"
        android:layout_marginRight="@dimen/marginBetween"
        android:text="@string/_6"
        android:textSize="@dimen/numbresSize"
        app:layout_constraintLeft_toRightOf="@id/button5"
        app:layout_constraintTop_toBottomOf="@id/button3" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginBetween"
        android:layout_marginRight="@dimen/marginBetween"
        android:text="@string/_7"
        android:textSize="@dimen/numbresSize"
        app:layout_constraintRight_toLeftOf="@id/button8"
        app:layout_constraintTop_toBottomOf="@id/button4" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginBetween"
        android:layout_marginRight="@dimen/marginBetween"
        android:text="@string/_8"
        android:textSize="@dimen/numbresSize"
        app:layout_constraintLeft_toRightOf="@id/button4"
        app:layout_constraintTop_toBottomOf="@id/button5" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginBetween"
        android:layout_marginRight="@dimen/marginBetween"
        android:text="@string/_9"
        android:textSize="@dimen/numbresSize"
        app:layout_constraintLeft_toRightOf="@id/button8"
        app:layout_constraintTop_toBottomOf="@id/button6" />

    <Button
        android:id="@+id/button0"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/marginBetween"
        android:text="@string/_0"
        android:textSize="@dimen/numbresSize"
        app:layout_constraintEnd_toEndOf="@id/button8"
        app:layout_constraintLeft_toRightOf="@id/button8"
        app:layout_constraintStart_toStartOf="@id/button7"
        app:layout_constraintTop_toBottomOf="@id/button7" />

    <Button
        android:id="@+id/buttonPoint"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginBetween"
        android:text="@string/point"
        android:textSize="@dimen/numbresSize"
        app:layout_constraintEnd_toEndOf="@id/button9"
        app:layout_constraintStart_toEndOf="@id/button0"
        app:layout_constraintTop_toBottomOf="@id/button9" />


    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:text="@string/minus"
        android:textSize="@dimen/numbresSize"
        app:layout_constraintStart_toStartOf="@id/button0"
        app:layout_constraintTop_toBottomOf="@id/buttonPlus" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:text="@string/plus"
        android:textSize="@dimen/numbresSize"
        app:layout_constraintStart_toStartOf="@id/button0"
        app:layout_constraintTop_toBottomOf="@id/button0" />

    <Button
        android:id="@+id/buttonDivided"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginBetween"
        android:text="@string/divided"
        android:textSize="@dimen/numbresSize"
        app:layout_constraintStart_toEndOf="@id/buttonMinus"
        app:layout_constraintTop_toBottomOf="@id/buttonPlus" />

    <Button
        android:id="@+id/buttonTimes"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginBetween"
        android:text="@string/times"
        android:textSize="@dimen/numbresSize"
        app:layout_constraintStart_toEndOf="@id/buttonMinus"
        app:layout_constraintTop_toBottomOf="@id/button0" />

    <Button
        android:id="@+id/equally"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp0"
        android:layout_marginStart="@dimen/marginBetween"
        android:text="@string/equally"
        android:textSize="@dimen/numbresSize"
        app:layout_constraintBottom_toBottomOf="@id/c"
        app:layout_constraintStart_toEndOf="@id/buttonTimes"
        app:layout_constraintTop_toBottomOf="@id/delete" />

    <Button
        android:id="@+id/c"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp0"
        android:text="@string/c"
        android:textSize="@dimen/numbresSize"
        app:layout_constraintStart_toStartOf="@id/buttonMinus"
        app:layout_constraintTop_toBottomOf="@id/buttonMinus" />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp0"
        android:text="@string/delete"
        android:textSize="@dimen/numbresSize"
        app:layout_constraintStart_toEndOf="@id/buttonTimes"
        app:layout_constraintTop_toBottomOf="@id/buttonPoint"
        app:layout_constraintEnd_toEndOf="@id/buttonPoint"/>

    <Button
        android:id="@+id/mPlus"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp0"
        android:text="M+"
        android:textSize="@dimen/numbresSize"
        app:layout_constraintStart_toStartOf="@id/buttonDivided"
        app:layout_constraintTop_toBottomOf="@id/buttonDivided" />


</androidx.constraintlayout.widget.ConstraintLayout>